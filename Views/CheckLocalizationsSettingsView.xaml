<UserControl x:Class="CheckLocalizations.Views.CheckLocalizationsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <Grid Margin="20">
        <Grid Name="DataLoad" Height="40" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" Name="pbDataLoad" Width="350" Height="40" />
            <TextBlock Grid.Column="0" Name="tbDataLoad" Text="{DynamicResource LOCCheckLocalizationsProgressBar}"
                       Style="{DynamicResource BaseTextBlockStyle}"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button Grid.Column="1" Click="ButtonCancelTask_Click" Margin="10,0,0,0" Content="{DynamicResource LOCCancelLabel}" />
        </Grid>


        <StackPanel Name="spSettings">
            <Label Content="{DynamicResource LOCCheckLocalizations}" FontSize="18" />
            <Separator Margin="0,0,0,10" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <CheckBox Grid.Row="0" Name="cbTag" IsChecked="{Binding EnableTag}" Grid.Column="0" VerticalAlignment="Center">
                    <Label Content="{DynamicResource LOCCheckLocalizationAddTagDescription}" />
                </CheckBox>

                <StackPanel  Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource LOCAddTitle}" Margin="0,0,10,0" IsEnabled="{Binding EnableTag}" VerticalAlignment="Center" Click="ButtonAdd_Click"/>
                    <Button Content="{DynamicResource LOCRemoveTitle}" IsEnabled="{Binding EnableTag}" VerticalAlignment="Center" Click="ButtonRemove_Click"/>
                </StackPanel>

                <ListBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Height="150" Margin="0,5" ItemsSource="{Binding GameLanguages}"
                         IsEnabled="{Binding ElementName=cbTag, Path=IsChecked}" Name="lbGameLanguages">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" IsChecked="{Binding IsTag}" VerticalAlignment="Center">
                                    <Label Content="{Binding DisplayName}" />
                                </CheckBox>

                                <CheckBox Grid.Column="2" IsChecked="{Binding IsNative}" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <Label Content="{DynamicResource LOCCheckLocalizationIsNative}" />
                                </CheckBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Column="0" Grid.Row="3" Content="{DynamicResource LOCCheckForUpdates}" Click="ButtonCheck_Click" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <Button Grid.Column="2" Grid.Row="3" Content="{DynamicResource LOCClearAll}" Click="ButtonClear_Click" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" />
            </Grid>


            <Label Content="{DynamicResource LOCCheckLocalizationsIntegration}" FontSize="18" Margin="0,20,0,0" />
            <Separator Margin="0,0,0,10" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding EnableIntegrationButton}" 
                          Name="CheckL_IntegrationInButton" 
                          Click="Checkbox_Click" VerticalAlignment="Center">
                    <Label Content="{DynamicResource LOCCheckLocalizationsIntegrationButton}" />
                </CheckBox>

                <GroupBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" IsEnabled="{Binding EnableIntegrationButton}"
                          Header="{DynamicResource LOCCheckLocalizationsIntegrationButtonOptions}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding EnableIntegrationButtonJustIcon}" VerticalAlignment="Center">
                            <Label Content="{DynamicResource LOCCheckLocalizationsIntegrationButtonJustIcon}" />
                        </CheckBox>
                        <CheckBox Grid.Column="2" Grid.Row="0" IsChecked="{Binding EnableIntegrationButtonDetails}" VerticalAlignment="Center">
                            <Label Content="{DynamicResource LOCCheckLocalizationsIntegrationButtonDetails}" />
                        </CheckBox>
                    </Grid>
                </GroupBox>
                
                <CheckBox Grid.Row="2" Grid.ColumnSpan="3" IsChecked="{Binding EnableIntegrationInCustomTheme}" Margin="0,5,0,0" 
                          Name="CheckL_IntegrationInCustomTheme" 
                          Click="Checkbox_Click" VerticalAlignment="Center">
                    <Label Content="{DynamicResource LOCCheckLocalizationsIntegrationInCustomTheme}" />
                </CheckBox>
            </Grid>
        </StackPanel>


    </Grid>
</UserControl>